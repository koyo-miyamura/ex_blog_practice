<h2>Show User</h2>

<ul>

  <li>
    <strong>Name:</strong>
    <%= @user.name %>
  </li>

  <li>
    <strong>Email:</strong>
    <%= @user.email %>
  </li>

</ul>
<%= if @user.id == current_user(@conn).id do %>
  <span><%= link "Edit", to: user_path(@conn, :edit, @user) %></span>
<% end %>
<span><%= link "Back", to: user_path(@conn, :index) %></span>
